{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Pr√©nom</th>
                <th scope="col">Nom</th>
                <th scope="col">Secteur</th>
                <th scope="col">Type de contrat</th>
                <th scope="col">Fin de contrat</th>
                <th scope="col" >actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.sector.name }}</td>
                <td>{{ user.contract.name }}</td>
                <td>{{ user.endDate ? user.endDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="btn btn-outline-success text-decoration-none">Voir</a>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-success text-decoration-none">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_new') }}" class="btn btn-success text-decoration-none">Ajouter</a>
{% endblock %}
