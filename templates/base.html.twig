<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
		{% block stylesheets %}{% endblock %}

	</head>
	<body>
		<nav class="navbar navbar-expand-lg bg-dark text-light">
			<div class="container-fluid">
				<a class="navbar-brand text-light" href="{{ path("app_home") }}">Annuaire</a>
				<div class="navbar-nav w-100 justify-content-between">
					<div class="d-flex">
						<a class="nav-link text-light" href="{{ path("app_home") }}">Accueil</a>
						<a class="nav-link text-light" href="{{ path("app_user_list") }}">Liste</a>
						{% if is_granted('ROLE_ADMIN') %}
						<a class="nav-link text-light" href="{{ path("app_admin_user_index") }}">Admin</a>
						{% endif %}
					</div>
					<div>
						{% if app.user %}
							<a class="nav-link text-light" href="{{ path("app_logout") }}">Logout</a>
						{% else %}
							<a class="nav-link text-light" href="{{ path("app_login") }}">Login</a>
						{% endif %}
					</div>
				</div>
			</div>
		</nav>

		<div class="container"> {% block body %}{% endblock %}
			</div>
		{% block javascripts %}
			<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
		{% endblock %}
		</body>
	</html>
